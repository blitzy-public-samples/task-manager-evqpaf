# Required for PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=example_user
DB_PASSWORD=example_password
DB_NAME=example_database

# Redis Configuration
# Required for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Service Configuration
# Required for sending notifications and system emails
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=example_email_user
EMAIL_PASSWORD=example_email_password

# Security Configuration
# Required for JWT token generation and validation
JWT_SECRET=example_jwt_secret

# Service Ports Configuration
# Required for microservices communication
API_GATEWAY_PORT=3000
NOTIFICATION_SERVICE_PORT=3001
PROJECT_SERVICE_PORT=3002
TASK_SERVICE_PORT=3003
USER_SERVICE_PORT=3004

# HUMAN TASKS:
# 1. Create a copy of this file named '.env' in the same directory
# 2. Replace all example values with actual production values
# 3. Ensure proper access controls are set on the .env file
# 4. Verify all services can connect using the configured values
# 5. Store production values securely in a password manager or secrets vault